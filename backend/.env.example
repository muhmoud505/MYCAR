# Copy to .env and update values
# MongoDB connection string, e.g. mongodb://localhost:27017/mycar or MongoDB Atlas URL
MONGODB_URI=mongodb://localhost:27017/mycar
JWT_SECRET=change_this_secret
STRIPE_SECRET=
FRONTEND_URL=http://localhost:3000

# Optional SMTP (for password reset emails). If not set, reset links are logged to the server console.
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
MAIL_FROM=
